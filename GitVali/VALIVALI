  <script>
    // Dramatic confetti with hearts
    function shootHearts() {
      const end = Date.now() + 4000;
      (function frame() {
        confetti({
          particleCount: 6,
          angle: 60,
          spread: 55,
          origin: { x: 0 },
          shapes: ['heart'],
          colors: ['#ff4757', '#ff6b81', '#ffa502', '#1e90ff']
        });
        confetti({
          particleCount: 6,
          angle: 120,
          spread: 55,
          origin: { x: 1 },
          shapes: ['heart'],
          colors: ['#ff4757', '#ff6b81', '#ffa502', '#1e90ff']
        });

        if (Date.now() < end) {
          requestAnimationFrame(frame);
        }
      }());
    }

    document.getElementById('yesBtn').addEventListener('click', () => {
      document.getElementById('message').classList.add('visible');
      document.getElementById('yesBtn').style.display = 'none';
      document.getElementById('noBtn').style.display = 'none';

      // Big burst
      confetti({
        particleCount: 300,
        spread: 120,
        origin: { y: 0.6 },
        colors: ['#ff4757', '#ff6b81', '#ffeb3b', '#2ed573', '#1e90ff']
      });

      // Heart rain
      shootHearts();
    });

    // Runaway No button (even harder to catch now)
    const noBtn = document.getElementById('noBtn');
    noBtn.addEventListener('mouseover', () => {
      const x = Math.random() * (window.innerWidth - 300) + 100;
      const y = Math.random() * (window.innerHeight - 300) + 100;
      noBtn.style.position = 'absolute';
      noBtn.style.left = x + 'px';
      noBtn.style.top = y + 'px';
    });

    // More dramatic floating hearts (multi-color, varied sizes)
    function createHeart() {
      const heart = document.createElement('div');
      heart.classList.add('heart');
      heart.innerHTML = Math.random() > 0.5 ? '‚ù§Ô∏è' : 'üíñ';
      heart.style.left = Math.random() * 100 + 'vw';
      heart.style.animationDuration = (Math.random() * 8 + 8) + 's';
      heart.style.fontSize = (Math.random() * 3 + 1.5) + 'rem';
      heart.style.opacity = Math.random() * 0.4 + 0.5;
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 15000);
    }
    setInterval(createHeart, 300);
  </script>

